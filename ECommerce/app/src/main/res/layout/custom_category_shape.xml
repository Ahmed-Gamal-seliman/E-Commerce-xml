<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/category_name_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <View
       android:id="@+id/view_vertical_line"
       android:layout_width="10dp"
       android:layout_height="50dp"
       android:background="@color/line_color"
       app:layout_constraintTop_toTopOf="@id/tv_category_name"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/tv_category_name"
       android:visibility="gone"

       />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Womenâ€™s Fashion"

        android:textColor="@color/category_name_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_vertical_line"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>