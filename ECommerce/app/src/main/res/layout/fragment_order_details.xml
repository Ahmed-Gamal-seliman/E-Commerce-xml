<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".product_details.ProductDetailsFragment">


    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/details_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        
        />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Air Jordon"
        app:layout_constraintTop_toBottomOf="@id/iv_product_image"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EGP 3,500"
        app:layout_constraintTop_toTopOf="@id/tv_product_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tv_product_count_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sold: 200"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        android:background="@drawable/border_shape"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        />


    <RatingBar
        android:id="@+id/rating_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="1"
        android:progressBackgroundTint="@color/dark_orange"
        app:layout_constraintTop_toTopOf="@id/tv_product_count_available"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_count_available"
        app:layout_constraintStart_toEndOf="@id/tv_product_count_available"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tv_rating_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        app:layout_constraintTop_toTopOf="@id/rating_star"
        app:layout_constraintBottom_toBottomOf="@id/rating_star"
        app:layout_constraintStart_toEndOf="@id/rating_star"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/tv_product_count_available"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/tv_descriptio_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasd"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total price"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_descriptio_details" />

    <TextView
        android:id="@+id/tv_product_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EGP 3,500"
        app:layout_constraintTop_toBottomOf="@id/tv_total_price"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>